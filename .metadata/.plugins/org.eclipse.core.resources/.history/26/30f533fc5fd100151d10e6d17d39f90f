import java.util.Arrays;

public class Bike {
	private int price;
	private String color;
	private int size;
	     
	//Constructors
	/**Creates a bike with the color gray*/
	
	public Bike (String color, int price){
		this.color = color;
		this.price = price;
	}
	
	public Bike (String color, int size, int price){
		if (Arrays.asList(ConstansBike.COLORARRAY).contains(color)){
			this.color = color;
		}else{ 
			this.color = "unpainted";
		}
		
		if (size < ConstansBike.MIN_SIZE){
			
		}else{
			this.size = ConstansBike.MIN_SIZE;
		}
		this.price = price;
	}
	
	//Methods
	
	public String getColor(){
		return this.color;
	}
	
	public int getPrice(){
		return this.price;
	}
	
	public int getSize (){
		return this.size;
	}

}
